{
  "name": "egg-boot",
  "version": "1.0.0",
  "description": "An template to boost startup eggjs",
  "private": true,
  "egg": {
    "declarations": true
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "egg": "^3.17.5",
    "egg-scripts": "2",
    "egg-sequelize": "^6.0.0",
    "egg-validate": "^2.0.2",
    "mysql2": "^3.7.0"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.1",
    "egg-bin": "6",
    "egg-mock": "5",
    "eslint": "8",
    "eslint-config-egg": "13",
    "prisma": "^5.11.0",
    "sequelize-cli": "^6.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start-prod": "EGG_SERVER_ENV=production dotenv -e .env.production egg-scripts start --title=egg-server-egg-boot",
    "startd-prod": "EGG_SERVER_ENV=production dotenv -e .env.production egg-scripts start --daemon --title=egg-server-egg-boot",
    "stop": "egg-scripts stop --title=egg-server-egg-boot",
    "dev-local": "EGG_SERVER_ENV=local dotenv -e .env.local egg-bin dev",
    "dev-prod": "EGG_SERVER_ENV=production dotenv -e .env.production egg-bin dev",
    "test": "npm run lint -- --fix && npm run test:local",
    "test:local": "egg-bin test",
    "cov": "egg-bin cov",
    "lint": "eslint .",
    "ci": "npm run lint && npm run cov",
    "postinstall": "prisma generate"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "hank",
  "license": "MIT"
}
